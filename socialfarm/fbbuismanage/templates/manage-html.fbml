<fb:header icon="false">
  Manage your businesses:
</fb:header>
<br><br>

<form action="." method="POST">
  Select a business to manage:&nbsp
  <select name="bselect">
    {% for bid in bids.all %}
      {% ifequal forloop.counter 1 %}
        <option value={{ bid.id }} selected>{{ bid.name }}</option>
      {% else %}
	<option value={{ bid.id }} >{{ bid.name }}</option>
      {% endifequal %}
    {% endfor %}
  </select> 
  <br><br>
  <input type="submit" value="Submit" />
</form>